<h1><%= @recipe.name %></h1>

<p class="content"><%= @recipe.content %></p>

<p>
  <button class="edit btn btn-primary">Edit</button>
  <a class="btn btn-danger"
    href="/recipes/<%= @recipe.slug %>"
    data-method="delete"
    rel="nofollow">Delete</a>
</p>


<div class="edit_form">
  <h3>Edit Recipe</h3>
  <form action="/recipes/<%= @recipe.slug %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="recipe_name"> Name:</label>
    <input id="recipe_name" name="recipe[name]" type="text" value="<%= @recipe.name %>">
    <br><label for="recipe_content"> Recipe: </label>
    <textarea rows="4" cols="50" id="recipe_content" name="recipe[content]"><%= @recipe.content %></textarea>
    <input name="params[slug]" type="hidden" value="recipe[name]">
    <button class="btn btn-success"> Update</button>
</form>


